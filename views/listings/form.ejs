<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="col-8 offset-2">
        <h1>Create a new listing</h1>
        <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" placeholder="Sweet Home" name="listing[title]" class="form-control" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <div class="invalid-feedback">
                    Title Must Required
                </div>
            </div>
            <div class="mb-3">
                <label for="description">Description</label>
                <input type="text" placeholder="Enter Description" name="listing[description]" class="form-control" required>
                <div class="invalid-feedback">
                    Description Needed
                </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="file"  name="listing[image]" class="form-control">
                required
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" placeholder="10000" id="minValueInput"  name="listing[price]" class="form-control" min="0" required>
                <div class="invalid-feedback">
                    Must be in digits and greater than 0.
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" placeholder="Chandigarh" name="listing[location]" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Provide Valid Location
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" placeholder="Bharat" name="listing[country]" class="form-control" required>
                    <div class="invalid-feedback">
                        Please Provide Valid Name
                    </div>
                </div>
            </div>
            <br>  
            <button class="btn btn-dark btns">Add Listing</button>
        </form>
        <br><br>
    </div>
</body>
