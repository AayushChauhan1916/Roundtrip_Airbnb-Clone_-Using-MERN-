<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Edit Listing</h1>
            <form action="/listings/<%=listing.id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="listing[title]" value="<%=listing.title%>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Title Must Required
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" placeholder="Enter Description" class="form-control" required name="listing[description]"><%=listing.description%></textarea>
                    <div class="invalid-feedback">
                        Description Needed
                    </div>
                </div>
                <div>
                    <p>Original Image</p>
                    <img src="<%=imageResize%>" class="card-img-top" alt="listing imkage">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">New Image</label>
                    <input type="file"  name="listing[image]" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" placeholder="Enter Price" id="minValueInput" min="0" name="listing[price]" required class="form-control" value="<%=listing.price%>">
                    <div class="invalid-feedback">
                        Must be in digits and greater than 0.
                    </div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" placeholder="Enter location" required name="listing[location]" class="form-control" value="<%=listing.location%>">
                        <div class="invalid-feedback">
                            Please Provide Valid Location
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" placeholder="Enter country" required name="listing[country]" class="form-control" value="<%=listing.country%>">
                        <div class="invalid-feedback">
                            Please Provide Valid Name
                        </div>
                    </div>
                </div>
                <br>
                <button class="btn btn-dark mb-3">Edit Listing</button>
            </form>
        </div>
    </div>
</body>